@model IEnumerable<DevXuongMoc.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_Admins.cshtml";
}

<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Mã sản phẩm
                </th>
                <th>
                    Mã loại sản phẩm
                </th>
                <th>
                    Tên sản phẩm
                </th>
                <th>
                    Hình ảnh
                </th>
                <th>
                    Tác vụ
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>

                    <td>
                        <img src="@item.Image" alt="@item.Title" width="350px" height="350px">
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Xem chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xoá</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
